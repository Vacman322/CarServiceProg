<Window x:Class="CarServiceProg.ListOfDocsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarServiceProg"
        mc:Ignorable="d"
        Title="ListOfDocsWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="DocsList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Путь к файлу" DisplayMemberBinding="{Binding DocumentPath}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
